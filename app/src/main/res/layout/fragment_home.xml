<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/destination_search"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:outlineSpotShadowColor="@color/one_piece"
            android:textColorHint="@color/one_piece"
            app:boxBackgroundColor="@color/grey"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:hintTextColor="@color/one_piece"
            android:layout_marginLeft="30dp"
            android:padding="0dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxStrokeColor="@color/one_piece"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cost_of_service_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="12dp"
                android:textColor="@color/one_piece"
                android:inputType="textAutoComplete" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/search1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/grey"
            android:layout_marginStart="10dp"
            app:icon="@drawable/ic_baseline_search_24"
            app:strokeWidth="1dp"
            app:strokeColor="@color/one_piece"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/destination_search"
            app:layout_constraintStart_toEndOf="@+id/destination_search"
            app:layout_constraintTop_toTopOf="@+id/destination_search" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_trip_button"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:textAllCaps="false"
            android:padding="0dp"
            android:text="@string/create_trip"
            android:textSize="12sp"
            android:textColor="@color/one_piece"
            app:icon="@drawable/create_trip_ic"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/destination_search" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/join_trip_button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:textAllCaps="false"
            android:padding="0dp"
            android:text="@string/join_trip"
            android:textSize="12sp"
            app:icon="@drawable/join_trip_ic"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            app:layout_constraintStart_toEndOf="@id/create_trip_button"
            app:layout_constraintTop_toBottomOf="@+id/destination_search" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/events_button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:textAllCaps="false"
            android:padding="0dp"
            android:text="@string/events"
            android:textSize="12sp"
            app:icon="@drawable/events_ic"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            app:layout_constraintStart_toEndOf="@id/join_trip_button"
            app:layout_constraintTop_toBottomOf="@+id/destination_search" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/hotel_button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:textAllCaps="false"
            android:padding="0dp"
            android:text="@string/hotel"
            android:textSize="12sp"
            app:icon="@drawable/hotel_ic"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            app:layout_constraintStart_toEndOf="@id/events_button"
            app:layout_constraintTop_toBottomOf="@+id/destination_search" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/vehicle_button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:textAllCaps="false"
            android:padding="0dp"
            android:text="@string/vehicle"
            android:textSize="12sp"
            app:icon="@drawable/ic_vehicle"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="35dp"
            app:layout_constraintStart_toEndOf="@id/hotel_button"
            app:layout_constraintTop_toBottomOf="@+id/destination_search" />


        <TextView
            android:id="@+id/place_text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/create_trip_button"
            android:layout_marginStart="15dp"
            android:text="Plan a Trip"
            android:textStyle="bold"
            android:textColor="@color/one_piece"
            android:textSize="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/place_text" />



        <TextView
            android:id="@+id/State_text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view"
            android:layout_marginStart="15dp"
            android:text="State Tourism"
            android:textStyle="bold"
            android:padding="0dp"
            android:textColor="@color/one_piece"
            android:textSize="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/State_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/service_button1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:outlineSpotShadowColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:text="To Cart"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/service_button2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:text="To Maps"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/service_button1"
            app:layout_constraintStart_toEndOf="@+id/service_button1" />






    </androidx.constraintlayout.widget.ConstraintLayout>

